{
	"compilerOptions": {
        "module": "esnext",
		"target": "es2019",
		"moduleResolution": "node",
		"strict": true,
		"noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "skipLibCheck": true,
		"preserveConstEnums":true,
        "sourceMap": true,
        "rootDir": "src",
        "baseUrl": "src",
        "typeRoots": ["./node_modules/@types", "./src/types"]
	},
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
